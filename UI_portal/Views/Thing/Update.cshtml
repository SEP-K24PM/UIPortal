<main class="addProduct-page">
    <section class="tableContent">
        <div class="containerAccount">
            <div class="tableContent__title">
                <div class="tableContent__title-user">
                    <div class="avt">
                        <img src="@Url.Content("~/Content/Assets/img/icons/user.svg")" alt="">
                    </div>
                    <div class="name">
                        <p>Tài khoản của</p>
                        <!--tên user-->
                        <p class="val">@User.Identity.Name</p>
                    </div>
                </div>
                <div class="tableContent__title-current">
                    <a href="@Url.Action("Index", "Thing")">
                        <h3 class="blur">Quản lý kho đồ</h3>
                    </a>
                    <p class="current__child updateproductservice">Cập nhật món đồ</p>
                </div>
            </div>
            <div class="tableContent__wrap">
                @Html.Partial("_SideTabPartial")
                <div class="tableContent__wrap-content">
                    <div class="tableContent__wrap-content--qlkd">
                        <div class="addProduct">
                            <form action="">
                                <div class="data__item">
                                    <label for="name">Tên sản phẩm</label>

                                    <input type="text" id="name" />
                                </div>
                                <div class="data__item">
                                    <label for="quantity">Số lượng</label>

                                    <input type="number" id="quantity" min="1" max="50" />
                                </div>
                                <div class="data__item">
                                    <label for="category">Thể loại</label>

                                    <select id="category">
                                        <option selected disabled>Chọn thể loại.. </option>
                                        <option value="1">Quần áo</option>
                                        <option value="2">Trang sức</option>
                                        <option value="3">Đồ dùng cá nhân</option>
                                        <option value="4">Tài liệu học</option>
                                        <option value="5">Sách</option>
                                        <option value="6">Vé</option>
                                        <option value="7">Dụng cụ thể thao</option>
                                        <option value="8">Đồ điện tử</option>
                                        <option value="9">Đồ lưu niệm</option>
                                        <option value="10">Thể loại khác</option>
                                    </select>
                                </div>
                                <div class="data__item">
                                    <label for="origin">Xuất xứ</label>

                                    <input type="text" id="origin" />
                                </div>
                                <div class="data__item">
                                    <label for="timeused">Thời gian sử dụng</label>

                                    <input type="text" id="timeused" />
                                </div>
                                <div class="data__item">
                                    <label for="price">Giá trị</label>
                                    <input type="text" id="price" />
                                </div>
                                <div class="data__item">
                                    <label for="img">Hình ảnh</label>
                                    <!-- <label class="custom-file-upload"> -->
                                    <input type="file" id="img" multiple="multiple"
                                           accept="image/x-png,image/jpg,image/jpeg">
                                    <!-- Tải ảnh lên -->
                                    <!-- </label> -->
                                </div>
                                <div class="data__item">
                                    <label></label>
                                    <button type="submit" class="btn-submit">Hoàn tất</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>