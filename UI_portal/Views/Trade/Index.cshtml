@using UI_portal.Models
@model  IEnumerable<Post>
@{
    ViewBag.Title = "Newsfeed";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<main class="market-page">
    <section class="bannermarket">
        <div class="textboxbanner">
            <h2>VanLangSave Market</h2>
            <p class="desc">Dive into our market spanning Clothes, Souvenir, Personal Belongings, Books, Tickets, Sports Equipments, Electronics and other categories.</p>
        </div>
    </section>
    <div class="searchWrap">
        <div class="search-input">
            <a href="" target="_blank" hidden></a>
            <input type="text" placeholder="Type to search..">
            <div class="autocom-box">
                <!-- here list are inserted from javascript -->
            </div>
            <button type="submit" class="searchMarket"><i class="icon"><img src="@Url.Content("~/Content/Assets/img/icons/icons8-search.svg")" /></i></button>
        </div>
    </div>
    <section class="mainProduct">
        <div class="container">
            <h2 class="content__CTA">Let's take a look some of the items posted today</h2>
            <div class="mainProduct__list">
                @foreach (var post in Model)
                {
                    <div class="mainProduct__list-item">
                        <a href="/postDetail.html">
                            <div class="item-img">
                                <!--Ảnh sản phẩm-->
                                <img src="@Url.Content("~/Content/Images/Thing/"+post.thing.image)" alt="">
                                <div class="label">
                                    <!--Thể loại sản phẩm-->
                                    <p class="type">CD</p>
                                </div>
                            </div>
                            <!--Tên sản phẩm-->
                            <h3 class="title">@post.thing.thing_name</h3>
                            <!--Mô tả ngắn-->
                            <p class="desc">@post.description</p>
                            <div class="user__info">
                                <div class="right">
                                    <div class="avt">
                                        <!--Ảnh đại diện-->
                                        <img src="img/rose-10.jpg" alt="">
                                    </div>
                                    <div class="user__info-name">
                                        <div class="wrap-top">
                                            <span>by</span>
                                            <!--Tên người dùng-->
                                            <p class="name">Park Chaeyoung</p>
                                        </div>
                                        <div class="vote-star">
                                            <img src="img/icons/star.svg" alt="">
                                            <!--TBC đánh giá-->
                                            <p class="star-value">4.5</p>
                                            <!--Tổng số đánh giá-->
                                            <p class="total-vote">(365)</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="left">
                                    <img src="@Url.Content("~/Content/Assets//img/icons/icons8-mailbox-100.png")" alt="">
                                    <!--Số người đăng ký-->
                                    <p>2</p>
                                </div>
                            </div>
                            <div class="last__info">
                                <div class="last__info-time">
                                    <!--Thời gian đăng-->
                                    <p class="value">@post.created_time </p>
                                    <span>trước</span>
                                </div>
                                <div class="last__info-option">
                                    <img src="@Url.Content("~/Content/Assets/img/icons/icons8-synchronize-100.png")" alt="">
                                    <!--Lựa chọn đổi-->
                                    <p class="option">@post.exchange_method</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
                <div class="mainProduct__list-item">
                    <a href="/postDetail.html">
                        <div class="item-img">
                            <!--Ảnh sản phẩm-->
                            <img src="@Url.Content("~/Content/Assets/img/detail/detail1.1.jpg")" alt="">
                            <div class="label">
                                <!--Thể loại sản phẩm-->
                                <p class="type">CD</p>
                            </div>
                        </div>
                        <!--Tên sản phẩm-->
                        <h3 class="title">ssss</h3>
                        <!--Mô tả ngắn-->
                        <p class="desc">ssss</p>
                        <div class="user__info">
                            <div class="right">
                                <div class="avt">
                                    <!--Ảnh đại diện-->
                                    <img src="img/rose-10.jpg" alt="">
                                </div>
                                <div class="user__info-name">
                                    <div class="wrap-top">
                                        <span>by</span>
                                        <!--Tên người dùng-->
                                        <p class="name">Park Chaeyoung</p>
                                    </div>
                                    <div class="vote-star">
                                        <img src="img/icons/star.svg" alt="">
                                        <!--TBC đánh giá-->
                                        <p class="star-value">4.5</p>
                                        <!--Tổng số đánh giá-->
                                        <p class="total-vote">(365)</p>
                                    </div>
                                </div>
                            </div>
                            <div class="left">
                                <img src="@Url.Content("~/Content/Assets//img/icons/icons8-mailbox-100.png")" alt="">
                                <!--Số người đăng ký-->
                                <p>2</p>
                            </div>
                        </div>
                        <div class="last__info">
                            <div class="last__info-time">
                                <!--Thời gian đăng-->
                                <p class="value">sssss </p>
                                <span>trước</span>
                            </div>
                            <div class="last__info-option">
                                <img src="@Url.Content("~/Content/Assets/img/icons/icons8-synchronize-100.png")" alt="">
                                <!--Lựa chọn đổi-->
                                <p class="option">Free</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="paging-btn">
                <span class="active">1</span>
                <span>2</span>
                <span>3</span>
                <span>4</span>
            </div>
        </div>
    </section>
</main>